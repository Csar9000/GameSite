{% extends "__common.twig" %}

{% block content %}
    <h1>Добавление Типа Игры</h1>
    <hr>

    {% if message %}
    <div class="alert alert-info">
        {{message}}
        <a href ="/games_types/{{id}}">открыть новый тип</a>
    </div>
    {% endif %}

    <form action="" enctype="multipart/form-data" method ="POST" class="row g-3">
        <div class="col-4">
            <label class="form-label">Название</label>
            <input type="text" class="form-control" name="title">
        </div>
        <div>
            <label for="formFileLg" class="form-label">Картинка</label>
            <input class="form-control form-control-lg" id="formFileLg" type="file" name="image">
          </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>


{% endblock %}